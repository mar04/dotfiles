general {
        colors = false
        interval = 1
}

order += "run_watch DHCP"
order += "wireless wlan0"
order += "ethernet eth0"
order += "volume master"
order += "battery 0"
order += "time"

volume master {
       format = "â™ª: %volume"
       device = "default"
       mixer = "Master"
       mixer_idx = 0
}

wireless wlan0 {
        format_up = "WiFi: %essid %ip"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage"
	path = "/sys/class/power_supply/BAT1/uevent"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

time {
        format = "%Y-%m-%d | %H:%M"
}

