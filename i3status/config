	format_up = "ðŸ”„ %ip"
	format_down = "down"
	color_bad = "#888888"
	color_good = "#888888"
}

volume master {
	format = "ðŸ”Š %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

battery 1 {
	format = "ðŸ“‹ %percentage"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
	threshold_type = "percentage"
	last_full_capacity = true
}

time {
	format = "%Y-%m-%d - %H:%M"
}

