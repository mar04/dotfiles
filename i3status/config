general {
	colors = true
	interval = 5
	color_good = "#4e9a06"
	color_bad = "#ff6565"
	output_format = "i3bar"
}

order += "wireless wlp2s0"
order += "ethernet enp1s0"
order += "volume master"
order += "battery 1"
order += "time"

wireless wlp2s0 {
	format_up = "ðŸ“¶ %essid"
	format_down = "down"
	color_bad = "#888888"
}

