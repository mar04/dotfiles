# MPD
# ----------------------------------------------------------------------------
"mpc toggle"
    XF86AudioPlay

"mpc stop"
    XF86AudioStop

"mpc prev"
    XF86AudioPrev

"mpc next"
    XF86AudioNext

"mpc seek -00:00:10"
    Shift + XF86AudioPrev

"mpc seek +00:00:10"
    Shift + XF86AudioNext


# VOLUME
# ----------------------------------------------------------------------------
"vol_up"
    m:0x0 + c:123
    XF86AudioRaiseVolume

"vol_down"
    m:0x0 + c:122
    XF86AudioLowerVolume

"vol_tog"
    m:0x40 + c:58
    Mod4 + m


