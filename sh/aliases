#!/bin/sh

alias prompt_normal='PS1=$PS0'
alias prompt_alarm='PS1="$PS0\a"'
alias prompt_status='PS1="$PS8"'

alias cal="cal -m3"
alias cls="ls++"
alias clsa="ls++ -A --group-directories-first"
alias cmount="mount | column -t"
alias df="df -hT"
alias dfl="df -hTl --exclude-type=tmpfs --exclude-type=devtmpfs"
alias diff="colordiff"
alias du="du -h"
alias e="emacs"
alias ebv="ebook-viewer"
#alias fbr="FBReader"
alias free="free -h"
alias gclean="git clean -d -x -f"
alias grep="grep --color=auto"
alias gtick="aoss gtick"
alias h="history"
alias i3reconf="cat ~/.config/i3/*.part > ~/.config/i3/config"
alias j="jobs"
alias ll="ls -hl --color=auto --group-directories-first"
alias lla="ls -hlA --color=auto --group-directories-first"
alias ls="ls -h --color=auto --group-directories-first"
#alias m="mplayer"
alias m="mpv"
alias mpdd="mpd ~/.config/mpd/mpd.conf"
alias ncmpcpp="ncmpcpp --config ~/.config/ncmpcpp/config"
alias news="newsbeuter"
alias qa="$EDITOR ~/doc/notes/quotes"
alias ql="cat ~/doc/notes/quotes"
alias rm="rm -I"
#alias sn="snownews"
alias startx="startx &>/dev/null ; vlock"
#alias startx='startx &> ~/.cache/xlog ; vlock'
alias td="$EDITOR ~/doc/notes/todo"
alias tree="tree -AC"
alias v="vim"
alias xrnat="xrandr --output LVDS1 --mode 1366x768"
