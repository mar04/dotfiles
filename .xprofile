#!/bin/bash
#
# ~/.xprofile
#

# GLOBAL SETTINGS
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# KEYBOARD MAP
# available options are in /usr/share/X11/xkb/rules/evdev.lst
# setxkbmap \
#     -layout pl \
#     -option ctrl:nocaps \
#     -option compose:lctrl \
#     -option shift:both_capslock \
#     -option terminate:ctrl_alt_bksp

# sets all of the above + turns space into Hyper_L that is another Ctrl
xkbcomp ~/.config/my_keyboard "$DISPLAY"

# space works as ctrl when used as modifier and as space when used alone
# capsloc works as ctrl when used as modifier ans as escape when used alone
xcape -e "Hyper_L=space;Control_L=Escape"

# KEYBOARD SHORTCUTS
sxhkd &

# KEY REPEAT
xset r rate 250 30

# SCREENSAVER
# controll screenlocker by dpms timeout, so that it can be inhibited
xset s off
xss-lock -- i3lock -n -d -c 888888 &

# BELL
xset -b

# X RESOURCES
xrdb -merge ~/.config/Xresources/Xresources

# COMPOSITOR
compton &

# POWER MANAGER
xfce4-power-manager &

# NETWORK MANAGER
nm-applet &

# PULSEAUDIO
pasystray &

# URXVT DAEMON
urxvtd -q -o -f

# SYNAPSE
synapse -s &

# GMAIL
gmailchecker -c ~/.config/gmailchecker/config -b

# CLIPBOARD
clipit &

# PIM
osmo &

# RSS
liferea &

# WWW
firefox &
